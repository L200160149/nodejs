<h2>Form Ubah Contact</h2>

<% if (typeof errors != 'undefined') { %>
<ul>
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/contact/update" method="POST">
  <input
    type="hidden"
    name="oldNama"
    value="<%= (contact.oldNama) ? contact.oldNama : contact.nama %>"
  />
  <input type="text" name="nama" value="<%= contact.nama %>" />
  <input type="text" name="nohp" value="<%= contact.nohp %>" />
  <input type="email" name="email" value="<%= contact.email %>" />

  <button type="submit">Ubah</button>
</form>
